---
import LoginForm from '../components/LoginForm.astro';
import { UserLogin } from '../api/api';

const title = 'Animalhada | Login'
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Animalhada Login Page" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-900 text-white">
    <main class="flex items-center justify-center min-h-screen">
      <div class="p-8 bg-gray-800 rounded-lg shadow-xl">
        <h1 class="mb-6 text-2xl font-bold text-center text-indigo-400">Login to Animalhada</h1>
        <LoginForm />
      </div>
    </main>
	</body>
</html>